<!DOCTYPE html>
<head>
<title>WebCampBackendNew</title>

</head>

<body>
<h2>Books</h2>


<table>
<thead>
<tr>
<th>Title</th>
<th>Body</th>
</tr>
</thead>
<tbody>
<div class="rink">
<tr>
<% @books.each do |book| %>
<td><%= book.title %></td>
<td><%= book.body %></td>
<td><%= link_to "Show", book_path(book.id) %></td>
<td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", books_path(book.id), method: :delete, "data-confirm" => "Are you sure？" %></td>
<% end %>
</tr>
</tbody>
</div>
</table>
<h2>New Book</h2>
<!--form_with部分-->
<%= form_with model: Book.new do |f| %>
<h6>Title</h6>
<%=f.text_field:title %>

<h6>Body</h6>
<%=f.text_area:body %>
<div class="actions">
<%=f.submit'Create Book' %>

<% end %>
</div>
</body>